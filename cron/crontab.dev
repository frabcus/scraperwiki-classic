SHELL=/bin/bash

# m h  dom mon dow   command

# Main scheduler that runs overdue scrapers

# Remove dummy users, scrapers etc. that the Selenium test script can make
0 0 * * * cd /var/www/scraperwiki/ && source bin/activate && cd web && python manage.py clear_selenium_byproducts

# Every morning update KPIs
0 4 * * * cd /var/www/scraperwiki/ && source bin/activate && cd web && python manage.py update_kpis


# Run screenshooters locally
0 */8 * * * cd /var/www/scraperwiki/ && source bin/activate && cd web &&  xvfb-run --auto-servernum --server-args="-screen 0, 1440x900x24" python manage.py take_screenshot --verbose --url_prefix=https://devviews.scraperwiki.com --run_scrapers
0 */8 * * * cd /var/www/scraperwiki/ && source bin/activate && cd web &&  xvfb-run --auto-servernum --server-args="-screen 0, 1440x900x24" python manage.py take_screenshot --verbose --url_prefix=https://devviews.scraperwiki.com --run_views
