#! /bin/sh
### BEGIN INIT INFO
# Provides:          ghserver
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start/stop GHServer server
### END INIT INFO

logger "Datastore.3: Start script executed"
PATH=/sbin:/usr/sbin:/bin:/usr/bin
DESC="Datastore.3"
NAME="datastore.3"
VARDIR=/var
PIDFILE=$VARDIR/run/$NAME.pid
LOGFILE=$VARDIR/log/$NAME.log
DAEMON=/bin/sh
CONFIG=/var/www/scraperwiki/uml/uml.cfg
DAEMON_ARGS="/var/www/scraperwiki/services/datastore/datastore.3.tac"
SCRIPTNAME=/etc/init.d/$NAME

export PYTHONPATH="/var/www/scraperwiki/services/datastore:$PYTHONPATH"

case "$1" in
  start)
    logger "$DESC: Starting"
    echo "Starting $DESC..."
    twistd -y "$DAEMON_ARGS" --logfile "/var/log/scraperwiki/$NAME.log" --pidfile "$PIDFILE"
    ;;
  stop)
    logger "$DESC: Stopping"
    echo "Stopping $DESC..."
    kill `cat $PIDFILE`
    ;;
  *)
    logger "$DESC: Invalid usage"
    echo "Usage: /etc/init.d/$NAME {start|stop}"
    exit 1
    ;;
esac

exit 0
